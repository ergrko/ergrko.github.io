       "axis": {
         "title": null,
         "grid": false,
         "ticks": false,
         "labelAngle": 45}},

      "y": {
        "field": "Totals/GDP (as a percentage)",
        "type": "quantitative",
        "title": "% of World GDP",
        "axis": {"grid": false}}
}
}