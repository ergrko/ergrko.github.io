{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ergrko/ergrko.github.io/main/UNI_LG_cleaned.csv"
  },
  "mark": "bar",
  "width": 500,
  "height": 340,
  "config": {
    "padding": {"top": 6, "bottom": 0, "left": 3, "right": 5},
    "background": "white",
    "view": {"stroke": "transparent"}
  },
  "title": {
    "text": "Number of Universities in Top 1000 by Country",
    "subtitle": "2021 Edition. Source: Webometrics Ranking of World Universities (CSIC)",
    "fontSize": 15,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 11.3,
    "anchor": "middle",
    "color": "black"
  },
  "transform": [
    {"filter": {"selection": "SectorSelector"}},
    {
      "filter": {
        "field": "Rank",
        "oneOf": ["0-100", "101-200", "201-500", "501-1000"]
      }
    }
  ],
  "selection": {
    "SectorSelector": {
      "type": "single",
      "fields": ["Rank"],
      "bind": {
        "input": "select",
        "options": [null, "0-100", "101-200", "201-500", "501-1000"],
        "name": "Pick Rank-Class;"
      }
    }
  },
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "title": null,
      "axis": {"grid": false, "labelFontSize": 12}
    },
    "y": {
      "field": "Number of Universities",
      "title": null,
      "type": "quantitative",
      "axis": {"grid": false, "labelFontSize": 11}
    },
    "color": {
      "field": "Rank",
      "type": "nominal",
      "legend": {
        "orient": "top-left",
        "columns": 1,
        "offset": 40,
        "symbolSize": 250
      },
      "scale": {"scheme": "yellowgreenblue"},
      "title": "Rank Class"
    },
    "tooltip": [
      {"field": "Rank", "title": "Rank Class"},
      {"field": "Country", "type": "nominal", "title": "Country"},
      {
        "field": "Number of Universities",
        "type": "quantitative",
        "title": "No. of Universities"
      }
    ]
  }
}